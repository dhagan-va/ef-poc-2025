# The config file for dotnet format
root = true

[*.cs]
# ----- Core formatting -----
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# ----- Braces & newlines -----
csharp_new_line_before_open_brace = all
csharp_new_line_between_members = true
csharp_preserve_single_line_blocks = false
csharp_preserve_single_line_statements = false
csharp_prefer_braces = true:suggestion

# ----- Indentation -----
csharp_indent_block_contents = true
csharp_indent_switch_labels = true
csharp_indent_labels = flush_left

# ----- Using directives -----
dotnet_sort_system_directives_first = true
dotnet_separate_import_directive_groups = true

# ----- Whitespace & blank lines -----
# ✅ Experimental key actually enforces blank-line cleanup
dotnet_style_allow_multiple_blank_lines_experimental = false:suggestion
dotnet_style_allow_statement_immediately_after_block = false:suggestion
csharp_space_after_keywords_in_control_flow_statements = true
csharp_space_after_comma = true
csharp_space_after_colon_in_inheritance_clause = true
csharp_space_around_binary_operators = before_and_after
csharp_space_between_method_declaration_parameter_list_parentheses = false
csharp_space_between_method_call_parameter_list_parentheses = false

# ----- Expression style -----
csharp_style_var_for_built_in_types = true:suggestion
csharp_style_var_when_type_is_apparent = true:suggestion
csharp_style_var_elsewhere = true:suggestion

# ----- Analyzer tuning -----
dotnet_analyzer_diagnostic.category-Style.severity = suggestion
dotnet_analyzer_diagnostic.category-Maintainability.severity = suggestion
dotnet_analyzer_diagnostic.category-Performance.severity = suggestion
dotnet_analyzer_diagnostic.category-Design.severity = suggestion
dotnet_analyzer_diagnostic.category-Reliability.severity = suggestion
dotnet_analyzer_diagnostic.category-Documentation.severity = none

# --- Non-critical analyzer suppressions ---
dotnet_diagnostic.CA1515.severity = silent       # Type can be made internal – fine
dotnet_diagnostic.CA1707.severity = none         # Underscores intentional (EDI)
dotnet_diagnostic.CA1303.severity = none         # Console strings need no resources
dotnet_diagnostic.CA1852.severity = silent       # “Type can be sealed” cosmetic
dotnet_diagnostic.CA2007.severity = suggestion   # ConfigureAwait(false) optional
dotnet_diagnostic.CA1056.severity = none         # URLs as string fine in config
dotnet_diagnostic.CA1311.severity = suggestion   # Culture casing non-critical

# ----- Excludes -----
[*.Designer.cs]
generated_code = true

[src/**/Migrations_*/*.cs]
generated_code = true
